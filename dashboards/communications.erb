<% content_for(:title) { "All Widget Dashboard" } %>
<div class="gridster">
  <ul>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-view="Image" style="background-color:#FFF467;" data-image="/AICandle.png" data-title="Hello" data-text="This is an example dashboard for Amnesty International Canada."></div>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="EN_browser_stats" style="background-color:#5574B9;" data-view="List" data-unordered="true" data-title="Web browser %" data-moreinfo="from last 30 days of Engaging Networks data"></div>
    <i class="icon-bar-chart icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="EN_new_online_donors_count" style="background-color:#F06EA9;" data-view="List" data-unordered="true" data-title="New Online Donors" data-moreinfo="each day last 7"></div>
    <i class="icon-heart icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="EN_Comments" style="background-color:#FBAF5C;" data-view="Comments" data-title="EN comments" data-moreinfo="From last 2 days"></div>
    <i class="icon-comment-alt icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="EN_top_cyber_actions_count" style="background-color:#438CCA;" data-view="List" data-unordered="true" data-title="Top Cyber Actions" data-moreinfo="in last 7 days"></div>
    <i class="icon-pencil icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="EN_new_cyber_activists_count" style="background-color:#1ABBB4;" data-view="List" data-unordered="true" data-title="New Cyber Activists" data-moreinfo="each day last 7"></div>
    <i class="icon-group icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="2" data-sizey="1">
      <div data-id="twitter_mentions_AIC" style="background-color:#1ABBB4;" data-view="Comments" data-title="Twitter feed" data-moreinfo="Popular Amnesty International tweets in Major Canadian Cities"></div>
      <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="EN_email_stats_open" style="background-color:#FBAF5C;" data-view="Number" data-title="Email open ratio last 7 days" data-moreinfo="Compared to previous 7 days"></div>
    <i class="icon-envelope icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="EN_email_stats_click" style="background-color:#F26C4F;" data-view="Number" data-title="Email links click ratio last 7 days" data-moreinfo="Compared to previous 7 days"></div>
    <i class="icon-cog icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="EN_email_stats_formsub" style="background-color:#3BB878;" data-view="Number" data-title="Form submit ratio last 7 days" data-moreinfo="Compared to previous 7 days"></div>
    <i class="icon-heart icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="Twitter_trending_hashtags" style="background-color:#1ABBB4;" data-view="List" data-unordered="true" data-title="Trending hashtags" data-moreinfo="From across Canada"></div>
    <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="Twitter_trending_hashtags_HR_but_non_Amnesty" style="background-color:#1ABBB4;" data-view="List" data-unordered="true" data-title="# Human rights" data-moreinfo="From across Canada excluding Amnesty"></div>
    <i class="icon-twitter icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="Facebook_AIC_page_stats_short" style="background-color:#438CCA;" data-view="List" data-unordered="true" data-title="FB Page Shares" data-moreinfo="Sharing stats for FB page"></div>
    <i class="icon-facebook icon-background"></i>
    </li>

    <li data-row="1" data-col="1" data-sizex="1" data-sizey="1">
      <div data-id="Facebook_link_stat" style="background-color:#438CCA;" data-view="List" data-unordered="true" data-title="FB link stats" data-moreinfo="for amnesty.ca links"></div>
    <i class="icon-facebook icon-background"></i>
    </li>

  </ul>
</div>
